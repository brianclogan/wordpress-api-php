{
    "name": "darkgoldblade01/wordpress-api-php",
    "description": "A Wordpress.org API wrapper written in PHP",
    "keywords": [
        "darkgoldblade01",
        "wordpress",
        "php wrapper",
        "api wrapper"
    ],
    "homepage": "https://github.com/darkgoldblade01/wordpress-api-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Brian Logan",
            "email": "brianldj@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "scrutinizer/ocular": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Darkgoldblade01\\Wordpress\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Darkgoldblade01\\Wordpress\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
